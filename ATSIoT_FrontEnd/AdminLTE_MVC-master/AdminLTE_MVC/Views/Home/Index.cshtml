@model AdminLTE_MVC.Models.Test
@{
    ViewBag.Title = "Dashboard";
}

<head>
    <!-- CanvasJS -->
    <script src="~/Content/AdminLTE/js/plugins/CanvasJS/canvasjs.min.js"></script>
    <!--Chart1-->
    @Scripts.Render(BundleConfig.BundlesJquery)
    <script type="text/javascript">


        $(document).ready(function () {

            var datapts = [];

            @if (Model.list != null)
            {
                foreach (var x in Model.list)
                {
                  @:datapts.push({ x: new Date(@x.serverTimeAsDate.Year, @x.serverTimeAsDate.Month - 1, @x.serverTimeAsDate.Day, @x.serverTimeAsDate.Hour, @x.serverTimeAsDate.Minute, @x.serverTimeAsDate.Second, @x.serverTimeAsDate.Millisecond), y: @x.value});
            
                        }
                    };

                    var chart1 = new CanvasJS.Chart("chart1Container",
                    {
                title: {
                    text: "Temperature"
                },


                toolTip: {
                    contentFormatter: function (e) {
                            var content = "";
                            for (var i = 0; i < e.entries.length; i++) {
                                content = CanvasJS.formatDate(e.entries[i].dataPoint.x, "HH:mm:ss:ff MM/DD/YYYY") + " - " + e.entries[i].dataPoint.y + "F";
                            }
                            return content;
                        }
                    },

                axisX: {
                    title: "time",
                    gridThickness: 2,
                    interval: 2,
                    intervalType: "hour",
                    valueFormatString: "hh mm ss TT K",
                    labelAngle: -20
                },
                axisY: {
                    title: "Temperature (F)"
                },
                data: [
                {
                    type: "line",
                    dataPoints: datapts
                }
                ]
            });

                console.log(chart1.dataPoints);
                chart1.render();
            });
    </script>

</head>


<section class="content">
    <!-- Small boxes (Stat box) -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper"> 
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>rasberry-pi-II</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="@Url.Action("RealTime","Home", new { datatype = "te"})">Realtime</a></li>
                <li class="active">History</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- Info boxes -->
            <div class="row">


                <!-- fix for small devices only -->
                <div class="clearfix visible-sm-block"></div>

                <div class="col-md-1 col-sm-6 col-xs-12">
                    <!-- Might be for later, still in question
                     <div id="reportrange" class="pull-right" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                        <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>&nbsp;
                        <span></span> <b class="caret"></b>
                    </div>
        -->
                    <!-- Temporary datetime picker-->

                   
                    @using (Html.BeginForm())
                    {
                        <div>
                            
                            <input type="text" name="daterange" style="width: 300px;" />
                            <input type="hidden" value="te" name="datatype" />
                            <script type="text/javascript">
                                    $(function() {
                                        $('input[name="daterange"]').daterangepicker({
                                            timePicker: true,
                                            timePickerIncrement: 1,
                                            timePicker24Hour: true,
                                            format: 'YYYY-MM-DD H:mm',
                                            startDate: '2016-01-01 01:30',
                                            endDate: '2016-01-01 02:00'
                                        });
                                    });
                            </script>

                            <input type="submit" class="btn btn-default btn-sm"/>
                        </div>
                        <div>
                            <!--Enter device name: <input type="text" name="device" value="" />-->
                            <input type="submit" class="btn btn-default btn-sm" name ="Download" value="Download as .csv">

                        </div>

                    }

                </div>

            </div><!-- /.row -->




            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">History</h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                <div class="btn-group">
                                    <button class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown"><i class="fa fa-wrench"></i></button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="#">Action</a></li>
                                        <li><a href="#">Another action</a></li>
                                        <li><a href="#">Something else here</a></li>
                                        <li class="divider"></li>
                                        <li><a href="#">Separated link</a></li>
                                    </ul>
                                </div>
                                <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                            </div>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <p class="text-center">
                                        <strong>History</strong>
                                    </p>
                                    <div class="chart">
                                        <!-- Chart Canvas -->
                                        <div id="chart1Container" style="height: 300px; width: 100%;">
                                        </div><!-- /.chart-responsive -->
                                    </div><!-- /.col -->


                                </div><!-- /.col -->
                            </div><!-- /.row -->
                        </div><!-- ./box-body -->

                    </div><!-- /.row -->
                </div><!-- /.box-footer -->

            </div>

            <div class="row">
            </div><!-- /.row -->
            <!-- top row -->
            <div class="row">
                <div class="col-xs-12 connectedSortable">
                </div><!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Main row -->
            <div class="row">
            </div><!-- /.row (main row) -->
        </section>
</section>

